---
// src/components/ui/HighlightPublication.astro
const { publication } = Astro.props
---

<div class="flex flex-col md:flex-row gap-6 bg-white dark:bg-gray-800 shadow-md rounded-2xl overflow-hidden hover:shadow-lg transition duration-300">
	<div class="md:w-1/3 max-w-full flex items-center justify-center">
		<a href={publication.link || "#"} class="block w-full h-full">
			<img 
				src={publication.thumbnail || "/placeholder.png"} 
				alt={`Thumbnail for ${publication.title}`}
				class="w-full h-auto max-h-full object-contain"
			/>
		</a>
	</div>

	<div class="flex flex-col justify-between p-6 md:w-2/3">
		<div>
			<a href={publication.link || "#"} class="hover:text-accent transition-colors duration-200">
				<h3 class="text-2xl font-semibold mb-3">{publication.title}</h3>
			</a>
			<p class="text-sm text-gray-700 dark:text-gray-300 mb-2">{publication.authors}</p>
			<p class="text-sm italic text-gray-500 dark:text-gray-400 mb-4">{publication.journal} ({publication.time})</p>
		</div>
		
		<div class="flex gap-4">
			{publication.summary && (
				<button 
					class="summary-btn text-accent hover:underline text-sm font-medium flex items-center gap-1 w-fit"
					data-title={publication.title}
					data-summary={publication.summary}
				>
					View Summary
					<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
						<path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2h-1V9a1 1 0 00-1-1z" clip-rule="evenodd" />
					</svg>
				</button>
			)}

			{publication.link && (
				<a href={publication.link} class="text-accent hover:underline text-sm font-medium flex items-center gap-1 w-fit">
					View Paper
					<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
						<path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
					</svg>
				</a>
			)}
		</div>
	</div>
</div>
