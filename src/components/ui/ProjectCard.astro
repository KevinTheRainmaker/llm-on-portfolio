---
interface Props {
  project: {
    title: string;
    description: string;
    thumbnail?: string;
    link?: string;
    time: string;
    tags?: string[];
  };
}

const { project } = Astro.props;
---

<div class="rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-shadow duration-200">
  {project.thumbnail && (
    <a href={project.link || "#"} class="block" target="_blank">
      <div class="aspect-video overflow-hidden">
        <img
          src={project.thumbnail || "/placeholder.png"}
          alt={`Thumbnail for ${project.title}`}
          class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"
        />
      </div>
    </a>
  )}
  
  <div class="p-5">
    <div class="flex justify-between items-start mb-2">
      <a href={project.link || "#"} class="hover:text-accent transition-colors duration-200" target="_blank">
        <h3 class="text-xl font-bold">{project.title}</h3>
      </a>
      <span class="text-sm">{project.time}</span>
    </div>
    
    <p class="mb-4">{project.description}</p>
    
    {project.tags && project.tags.length > 0 && (
      <div class="flex flex-wrap gap-2">
        {project.tags.map(tag => (
          <span class="text-xs px-3 py-1 rounded-full bg-gray-100">
            {tag}
          </span>
        ))}
      </div>
    )}
  </div>
</div> 